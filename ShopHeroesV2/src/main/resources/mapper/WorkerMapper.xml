<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="apiRest.database.mapper.WorkerMapper">

	<resultMap type="apiRest.database.classe.Worker" id="workerResultMap">
		<id		property="id"			column="id" />
		<result property="name"			column="name" />
		<result property="golds"		column="golds" />
		<association property="job"		javaType="apiRest.database.classe.Job"
			select="apiRest.database.mapper.JobMapper.selectJobById" column="job"/>
		<collection property="players" javaType="ArrayList" ofType="apiRest.database.classe.Player"
			select="apiRest.database.mapper.WorkerMapper.selectPlayerById" column="player"/>
	</resultMap>
	
	<select id="selectAllWorkers" parameterType="apiRest.database.classe.Worker" resultMap="workerResultMap">
		SELECT *
		FROM worker
	</select>
	
	<select id="selectWorkerById" parameterType="apiRest.database.classe.Worker" resultMap="workerResultMap">
		SELECT *
		FROM worker
		WHERE id=#{id}
	</select>
	
	<select id="selectWorkerByIdWithoutJob" parameterType="apiRest.database.classe.Worker" resultMap="workerResultMap">
		SELECT id, name, golds
		FROM worker
		WHERE id=#{id}
	</select>
	
	<insert id="insertWorker" parameterType="apiRest.database.classe.Worker" keyProperty="id">
		INSERT INTO worker(name, golds, job) values (#{name}, #{golds}, #{job.id})
	</insert>
</mapper>